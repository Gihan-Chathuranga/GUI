<Window x:Class="WpdfAppDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpdfAppDb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="20" 
                   Padding="5"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Text="Food Product App"></TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button FontSize="20"
                    VerticalAlignment="Center"
                    Padding="10"
                    Margin="5"
                    Background="Tomato"
                    Foreground="White"
                    Click="Add_Product">Add Product
                
            </Button>
            <Button FontSize="20"
                    Padding="10"
                    Margin="5"
                    Background="Tomato"
                    Foreground="White"
                    Click="Delete_Product">Delete Product
            </Button>
            <Button FontSize="20"
                    Padding="10"
                    Margin="5"
                    Background="Tomato"
                    Foreground="White" Click="Update_Product">Update Product
            </Button>
        </StackPanel>

        <DataGrid
            AutoGenerateColumns="True"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            x:Name="ProductGrid"
            Grid.RowSpan="2"
            Grid.Row="1"
            Grid.Column="0"
            Background="Beige">
        </DataGrid>
        <Button Grid.Column="1" Grid.Row="2" FontSize="20">Add Product</Button>

    </Grid>

</Window>
