<Window x:Class="WpdfAppDb.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpdfAppDb"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800" Background="DarkSlateGray">
    <Grid>
        <Label Content="WELCOME TO TOMATO APP" FontSize="22" Foreground="White" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top"/>
        <Label Content="Username" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="187,154,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="187,198,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Username" FontSize="16" Padding="5px"  HorizontalAlignment="Left" Margin="328,149,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="183" Height="35" RenderTransformOrigin="0.472,-0.483"/>
        <PasswordBox x:Name="Password" FontSize="16" Padding="5px" HorizontalAlignment="Left" Margin="328,200,0,0" VerticalAlignment="Top" Width="183" Height="35"/>
        <Button Content="Login" FontSize="18" FontWeight="Medium" BorderBrush="Azure" BorderThickness="1.2" Background="Tomato" Foreground="White" HorizontalAlignment="Left" Margin="398,268,0,0" Width="115" Height="40" Click="Button_Click"/>


    </Grid>
</Window>
