<Window x:Class="WpdfAppDb.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpdfAppDb"
        mc:Ignorable="d"
        Title="ProductWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name"
                   Margin="5"
                   Padding="5"
                   FontSize="20"
                   Grid.Column="0"
                   Grid.Row="0"
                   />
        <TextBox
            x:Name="NameTexbox"
           Margin="5"
           Padding="5"
           FontSize="20"
           Grid.Column="1"
           Grid.Row="0"
           Background="pink"
           />

        <TextBlock Text="Price"
           Margin="5"
           Padding="5"
           FontSize="20"
           Grid.Column="0"
           Grid.Row="1"
           
           />
        <TextBox
            x:Name="PriceTexbox"
           Margin="5"
           Padding="5"
           FontSize="20"
           Grid.Column="1"
           Grid.Row="1"
           Background="pink"
        />
        <TextBlock Text="Quantity"
           Margin="5"
           Padding="5"
           FontSize="20"
           Grid.Column="0"
           Grid.Row="2"
           
        />
        <TextBox
            x:Name="QuantityTexbox"
            Margin="5"
            Padding="5"
            FontSize="20"
            Grid.Column="1"
            Grid.Row="2"
            Background="pink"
        />

        <StackPanel Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Save" Width="100" Height="40"
                    Margin="5 10"
                    Padding="5" FontSize="20"
                    Click="Save_Product"/>
            <Button Content="Cancel" Width="100" Height="40"
                    Margin="20 10"
                    Padding="5" FontSize="20"/> 
        </StackPanel>
    </Grid>
</Window>
